{% extends 'admin/admin_base.html.twig' %}

    {% block main %}

        <div class="container-list">
            <div class="title-list">
                <h1>Nombre de tags dans la base de données : {{ tags | length }}</h1>
            </div>
            <div class="list">

                {% for tag in tags %}
                    <article>
                        <a href={{ path('admin_tag_show', {'id': tag.id} ) }}>

                            <h3 style="background-color: {{ tag.color }}">{{ tag.name }}</h3>

                        </a>
                        <a href="{{ path('admin_tag_delete', {'id': tag.id }) }}">Supprimer</a>
                        <a href="{{ path('admin_tag_update', {'id': tag.id }) }}">Mettre à jour (hardcodé)</a>
                    </article>
                {% endfor %}

            </div>
            <div class="insert-button">

                <a href="{{ path('admin_tag_insert') }}">Ajouter un tag (hardcodé)</a>

            </div>
        </div>




    {% endblock main %}

