{% extends 'base.html.twig' %}

    {% block metaTitle %}

        L'article : {{ article.title }}

    {% endblock metaTitle %}

    {% block main %}

        <div class="container-show">

            <article>
                <h1>{{ article.title }}</h1>
                <p>{{ article.description }}</p>
                <!-- Permet d'afficher une date correctement -->
                <p>Article écrit le : {{ article.createdAt | date('y-m-d') }}</p>
                <p>Catégorie : {{ article.category.title }}</p>
            </article>

        </div>

    {% endblock main %}
