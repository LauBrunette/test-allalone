{% extends ('base.html.twig') %}

    {% block metaTitle %}

        Liste des catégories

    {% endblock metaTitle %}

{% block main %}

    <h1>Il y a {{ categories | length }} articles dans la base de données</h1>

    <div class="show">
        {% for category in categories %}
            {%  if category.published %}
                <article>

                    <!-- Quand on clique sur le lien, ça renvoie au chemin "articleShow"
                     qui ouvre donc le fichier twig "article_show". On passe la wildcard ID
                     afin de boucler sur l'article sur lequel on a cliqué.
                     "path" est une fonction -->
                    <a href={{ path('categoryShow', {'id': category.id} ) }}>

                        <h3>{{ category.title }}, ID : {{ category.id }}</h3>
                        <p>{{ category.content }}</p>

                    </a>
                </article>
            {% endif %}
        {% endfor %}
    </div>

{% endblock main %}