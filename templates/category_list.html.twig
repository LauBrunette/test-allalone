{% extends ('base.html.twig') %}

    {% block metaTitle %}

        Liste des catégories

    {% endblock metaTitle %}

    {% block main %}

        <div class="container-list">
            <div class="title-list">
                <h1>Nombre de catégories dans la base de données : {{ categories | length }}</h1>
            </div>

            <div class="list">
                {% for category in categories %}
                        <article>
                            <a href={{ path('categoryShow', {'id': category.id} ) }}>

                                <h3>{{ category.title }}, ID : {{ category.id }}</h3>

                            </a>
                        </article>
                {% endfor %}
            </div>
        </div>

    {% endblock main %}