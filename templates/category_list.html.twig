{% extends ('base.html.twig') %}

    {% block metaTitle %}

        Liste des catégories

    {% endblock metaTitle %}

    {% block main %}


        <div class="container-list">

            <div class="title-list">
                <h2>Nombre de catégories dans la base de données : {{ categories | length }}</h2>
                <p>Cliquez sur une catégorie pour voir les articles qui y sont liés.</p>
            </div>

            <div class="list">
                {% for category in categories %}
                        <article>
                            <a href={{ path('categoryShow', {'id': category.id} ) }}>

                                <h3>{{ category.title }}</h3>

                            </a>
                        </article>
                {% endfor %}
            </div>
        </div>

    {% endblock main %}