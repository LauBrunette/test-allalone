{% extends ('base.html.twig') %}


    {% block main %}

        <div class="container-list">
            <div class="title-list">
                <h1>Il y a {{ articles | length}} article.s correspondant à votre recherche :</h1>
                <p>Cliquez sur un article pour afficher les détails.</p>
            </div>

            <div class="list">
                {% for article in articles %}
                    <article>
                        <a href={{ path('articleShow', {'id': article.id} ) }}>

                            <h3>{{ article.title }}</h3>

                        </a>
                    </article>
                {% endfor %}
            </div>
        </div>

    {% endblock main %}